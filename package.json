{
  "name": "next-public-env-root",
  "description": "Manage type-safe runtime environment variables in Next.js for both the server and client.",
  "version": "0.0.1",
  "author": "alizeait",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "oxlint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:apps": "yarn workspaces foreach --include '{next-14,next-15,next-16}' -pA  run build",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.9.0",
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "yarn@4.10.3",
  "resolutions": {
    "@playwright/test": "1.56.1",
    "playwright": "1.56.1"
  }
}
